<center><h1>Project</h1></center>
<%= form_for(@project ) do |f| %>
<% if @project.errors.present? %>
<ul>
<%@project.errors.full_messages.each do |message| %>
<li><%= message%></li>
<% end %>
</ul>
<% end %>
	<table border=1>

		<tr>	
			<th>Project Name</th><td><%=f.text_field :project_name%></td>
		</tr>
		<tr>	
			<th>Project Description</th><td><%=f.text_area( :project_description,:size => "50x5")%></td>
		</tr>
		<tr>
			<th>Start Date</th><td><%=f.date_select :start_date%></td>
		</tr>
		<tr>
			<th>End Date</th><td><%=f.date_select :end_date%></td>
		</tr>
		<tr>
		<th>Status</th><td><%=f.select(:status,options_for_select(["Not_Started","Started","In-Progress","Finished"],:selected=>@project.status))%></td>
		</tr>
		<tr>
			<th>Users</th>
			<td>
			<%@users.each do |user| %>
				<%= check_box_tag "project[user_ids][]",user.id,@project.users.include?(user) %><%= user.user_name %><br>
			<% end %>
		</td>
		</tr>
		<tr>
			<th colspan=2><%=f.submit button%> </th>
		</tr>
	</table>
<%end%>

