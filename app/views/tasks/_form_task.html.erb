<center><h1>Task</h1></center>
<%= form_for([@milestone,@task]) do |f| %>
<% if @task.errors.present? %>
<ul>
<%@task.errors.full_messages.each do |message| %>
<li><%= message%></li>
<% end %>
</ul>
<% end %>
	<table border=1>

		<tr>	
			<th>Task Name</th><td><%=f.text_field :name%></td>
		</tr>
		<tr>
			<th>Start Date</th><td><%=f.date_select :start_date%></td>
		</tr>
		<tr>
			<th>End Date</th><td><%=f.date_select :end_date%></td>
		</tr>
		<tr>
			<th>Status</th><td><%=f.select(:status,options_for_select(["Not_Started","Started","In-Progress","Finished"]))%></td>
		</tr>
		
	<tr>
			<th>User Id</th><td><%=f.select(:user_id,@users.collect{|u| [u.user_name,u.id]})%></td>
		</tr>
		<tr>
			<th colspan=2><%=f.submit button%> </th>
		</tr>
	</table>
<%end%>

