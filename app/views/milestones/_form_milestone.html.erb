<center><h1>Milestone</h1></center>

<%= form_for([@project,@milestone] ) do |f| %>
<% if @milestone.errors.present? %>
<ul>
<%@milestone.errors.full_messages.each do |message| %>
<li><%= message%></li>
<% end %>
</ul>
<% end %>
	<table border=1>
	<tr>	
		<th>Milestone Name</th><td><%=f.text_field :name%></td>
	</tr>
	<tr>
		<th>Start Date</th><td><%=f.date_select :start_date%></td>
	</tr>
	<tr>
		<th>End Date</th><td><%=f.date_select :end_date%></td>
	</tr>
	<tr>
		<th>Status</th><td><%=f.select(:status,options_for_select(["Not_Started","Started","In-Progress","Finished"],:selected=>@milestone.status))%></td>
	</tr>

	<tr>
		<th colspan=2><%=f.submit button%> </th>
	</tr>
</table>
<%end%>

