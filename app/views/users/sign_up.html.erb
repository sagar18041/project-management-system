<center><h1>User</h1></center>
<%= form_for(@user) do |f| %>
<% if @user.errors.present? %>
<ul>
<%@user.errors.full_messages.each do |message| %>
<li><%= message%></li>
<% end %>
</ul>
<% end %>
	<table border=1>

		<tr>	
			<th>User Name</th><td><%=f.text_field :user_name%></td>
		</tr>
		<tr>
			<th>Address</th><td><%=f.text_field :user_address%></td>
		</tr>
		<tr>
			<th>Password</th>
			<td><%= f.password_field :password %></td>
		</tr>
		<tr>
			<th>Retype-Password</th>
			<td><%= f.password_field :password_confirmation %></td>
		</tr>
			<th colspan=2><%=f.submit "create"%> </th>
		</tr>
	</table>
<%end%>